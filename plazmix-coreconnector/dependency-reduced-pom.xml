<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.plazmix</groupId>
  <artifactId>plazmix-coreconnector</artifactId>
  <name>CoreConnector</name>
  <version>1.0.0</version>
  <description>Connection system with the project core</description>
  <url>https://plazmix.net/</url>
  <issueManagement>
    <system>GitLab</system>
    <url>https://gitlab.plazmix.space/groups/plazmix-dev/qa/-/issues</url>
  </issueManagement>
  <organization>
    <name>Plazmix Network</name>
    <url>https://plazmix.net/</url>
  </organization>
  <build>
    <defaultGoal>clean package install</defaultGoal>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
          <include>bungee.yml</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <groupId>${project.groupId}</groupId>
          <artifactId>${project.artifactId}</artifactId>
          <version>${project.version}</version>
          <url>${gitlab.repository.url}</url>
          <repositoryId>${gitlab.repository.url}</repositoryId>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <target>8</target>
          <source>8</source>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration />
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>plazmix-maven</id>
      <url>https://maven.plazmix.space/repository/</url>
    </repository>
    <repository>
      <id>gitlab-maven</id>
      <url>${gitlab.repository.url}</url>
    </repository>
    <repository>
      <id>cloudnet-releases</id>
      <url>https://repo.cloudnetservice.eu/repository/releases/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>de.dytanic.cloudnet</groupId>
      <artifactId>cloudnet-wrapper-jvm</artifactId>
      <version>3.4.0-RELEASE</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>cloudnet-driver</artifactId>
          <groupId>de.dytanic.cloudnet</groupId>
        </exclusion>
        <exclusion>
          <artifactId>annotations</artifactId>
          <groupId>org.jetbrains</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.md-5</groupId>
      <artifactId>bungeecord</artifactId>
      <version>1.12</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.github.azbh111</groupId>
      <artifactId>ProtocolLib</artifactId>
      <version>4.4.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot</artifactId>
      <version>1.12.2-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>gitlab-maven</id>
      <url>${gitlab.repository.url}</url>
    </repository>
    <snapshotRepository>
      <id>gitlab-maven</id>
      <url>${gitlab.repository.url}</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <gitlab.repository.url>https://gitlab.plazmix.space/api/v4/projects/19/packages/maven</gitlab.repository.url>
  </properties>
</project>


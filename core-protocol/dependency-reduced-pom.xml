<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.plazmix</groupId>
  <artifactId>core-protocol</artifactId>
  <name>CoreProtocol</name>
  <version>1.0.0</version>
  <description>Plazmix core protocol system</description>
  <url>https://plazmix.net/</url>
  <issueManagement>
    <system>GitLab</system>
    <url>https://gitlab.plazmix.space/groups/plazmix-dev/qa/-/issues</url>
  </issueManagement>
  <organization>
    <name>Plazmix Network</name>
    <url>https://plazmix.net/</url>
  </organization>
  <build>
    <defaultGoal>clean package install</defaultGoal>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <groupId>${project.groupId}</groupId>
          <artifactId>${project.artifactId}</artifactId>
          <version>${project.version}</version>
          <url>${gitlab.repository.url}</url>
          <repositoryId>${gitlab.repository.url}</repositoryId>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <target>8</target>
          <source>8</source>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration />
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>plazmix-maven</id>
      <url>https://maven.plazmix.space/repository/</url>
    </repository>
    <repository>
      <id>gitlab-maven</id>
      <url>${gitlab.repository.url}</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>gitlab-maven</id>
      <url>${gitlab.repository.url}</url>
    </repository>
    <snapshotRepository>
      <id>gitlab-maven</id>
      <url>${gitlab.repository.url}</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <gitlab.repository.url>https://gitlab.plazmix.space/api/v4/projects/19/packages/maven</gitlab.repository.url>
  </properties>
</project>

